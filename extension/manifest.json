{
  "manifest_version": 2,
  "name": "Leitor de Newsletter",
  "version": "1",
  "background": {
    "scripts": ["content.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_title": "Leitor de Newsletter"
  }
}